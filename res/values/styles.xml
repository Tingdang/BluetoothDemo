<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemes" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_vertical" parent="wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_horizontal" parent="wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_wrap_vertical" parent="fill_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fill_wrap_horizontal" parent="fill_wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill_vertical" parent="fill">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fill_vertical_white" parent="fill_vertical">
        <item name="android:background">@color/bg_white</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ScannerSubtitle">
        <item name="android:textColor">@color/headerTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bt" parent="wrap">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/actionbar_menu_selector</item>
    </style>

    <style name="mystyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SampleTheme.Light" parent="android:Theme.Light.NoTitleBar">
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

</resources>